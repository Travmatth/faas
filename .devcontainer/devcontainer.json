{
	"name": "Faas Dev Container",
	"dockerfile": "../build/docker/dev.dockerfile",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	// forwardPorts is list of port from contaier made available on the host
	"forwardPorts": [8080],
	// default container specific settings.json vals
	"settings": {
		"terminal.integrated.shell.linux": "/bin/zsh",
		"go.gopath": "/go",
		"go.inferGopath": true,
		"go.useLanguageServer": true
	},
	// extensions to be installed in container on creation
	"extensions": [
		"golang.Go",
		"tabnine.tabnine-vscode",
		"hashicorp.terraform"
	],
	"dockerFile": "../build/docker/dev.dockerfile",
}